{
  "name": "saferestore",
  "version": "1.3.0",
  "description": "SafeRestore - AI-Powered Data Recovery Concierge with Local Backup Recovery",
  "main": "main.js",
  "author": "SafeRestore",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:signed": "electron-builder --mac dmg --publish never",
    "build:mas": "electron-builder --mac mas",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.saferestore.app",
    "productName": "SafeRestore",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "recovery.html",
      "backup-scanner.js",
      "android-scanner.js",
      "android-extractor.js",
      "cloud-connector.js",
      "mac-recovery.js",
      "data-exporter.js"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dir",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": false,
      "icon": null
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mas": {
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": "embedded.provisionprofile"
    },
    "win": {
      "target": ["portable"],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icons"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "plist": "^3.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
